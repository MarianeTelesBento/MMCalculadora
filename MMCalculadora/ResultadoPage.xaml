<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMCalculadora.ResultadoPage"
             Title="Troco">
    
    <ScrollView>
        <VerticalStackLayout 
            Margin="20"
            Spacing="30"
            Padding="30,50,30,30">

            <Frame CornerRadius="15">
                <Image Source="Resources/Images/troco.png"/>
            </Frame>

            <Label
                x:Name="changeLabelTotalSpent"
                Text="Gasto Total: "
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                x:Name="changeLabelTotalPayment"
                Text="Pagamento: "
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                x:Name="changeLabelChange"
                Text="Troco: "
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                Text="Finalizar"
                Clicked="OnFinishChangeClicked"
                HorizontalOptions="Fill" 
                FontSize="20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>