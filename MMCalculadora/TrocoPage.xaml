<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMCalculadora.TrocoPage"
             Title="TrocoPage">


    <ScrollView>
        <VerticalStackLayout 
            Padding="30,0" 
            Spacing="25">

            <Label 
                Text="Calculadora MM" 
                FontSize="20" 
                HorizontalOptions="Center"/>

            <Image 
                Source="https://image.tuasaude.com/media/article/mf/05/beneficios-da-carambola_13461_l.jpg" />

            <Entry
                x:Name="totalAmountEntry"
                Placeholder="Valor Total" 
                PlaceholderColor = "#696969"
                Keyboard="Numeric" />

            <Entry
                x:Name="givenAmountEntry"
                Placeholder="Valor Recebido"
                PlaceholderColor = "#696969"
                Keyboard="Numeric" />

            <Button
                Text="Calcular Troco"
                Clicked="OnCalculateChangeClicked"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>